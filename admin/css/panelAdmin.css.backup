   RESPONSIVE
   ========================= */

@media (max-width: 768px) {
  .theme-grid {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 0.75rem;
  }

  .theme-option-card {
    padding: 0.75rem;
  }

  .theme-color-preview {
    width: 32px;
    height: 32px;
  }

  .custom-color-input-group {
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
  }

  .theme-actions {
    flex-direction: column;
  }
}

