  border: none;
  border-radius: 8px;
  font-size: 0.875rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.2s ease;
}

.apply-custom-btn:hover {
  background: var(--secondary-color);
  transform: translateY(-1px);
}

.apply-custom-btn:disabled {
  background: #94a3b8;
  cursor: not-allowed;
  transform: none;
}

.theme-actions {
  display: flex;
  gap: 0.75rem;
  justify-content: flex-end;
  margin-top: 1.5rem;
  padding-top: 1.5rem;
  border-top: 1px solid #e2e8f0;
}

[data-theme="dark"] .theme-actions {
  border-color: var(--border-color);
}

.save-global-theme {
  padding: 0.75rem 1.5rem;
  background: var(--primary-color);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
}

.save-global-theme:hover {
  background: var(--secondary-color);
  transform: translateY(-1px);
}

.reset-theme {
  padding: 0.75rem 1.5rem;
  background: #f1f5f9;
  color: #475569;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.reset-theme:hover {
  background: #e2e8f0;
  border-color: #cbd5e1;
  color: #334155;
  transform: translateY(-1px);
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.reset-theme svg {
  transition: transform 0.2s ease;
}

.reset-theme:hover svg {
  transform: rotate(-180deg);
}

[data-theme="dark"] .reset-theme {
  background: var(--bg-tertiary);
  color: var(--text-secondary);
  border-color: var(--border-color);
}

[data-theme="dark"] .reset-theme:hover {
  background: var(--bg-secondary);
  border-color: var(--border-color);
  color: var(--text-primary);
}

/* ========================================
   ESTILOS PARA M√âTRICAS DIN√ÅMICAS
   ======================================== */

/* Estados del sistema en m√©tricas */
.metric-icon.status.success {
  background: linear-gradient(
    135deg,
    #10b981 0%,
    rgba(16, 185, 129, 0.8) 100%
  ) !important;
}

.metric-icon.status.warning {
  background: linear-gradient(
    135deg,
    #f59e0b 0%,
    rgba(245, 158, 11, 0.8) 100%
  ) !important;
}

.metric-icon.status.danger {
  background: linear-gradient(
    135deg,
    #ef4444 0%,
    rgba(239, 68, 68, 0.8) 100%
  ) !important;
}

/* Animaci√≥n de carga para m√©tricas */
.metric-value.loading {
  position: relative;
  color: transparent !important;
}

.metric-value.loading::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 200% 100%;
  animation: loading-shimmer 1.5s infinite;
  border-radius: 4px;
}

@keyframes loading-shimmer {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

/* Estados de cambio en m√©tricas */
.metric-change.positive {
  color: #10b981;
}

.metric-change.negative {
  color: #ef4444;
}

.metric-change.neutral {
  color: #6b7280;
}

/* Efecto hover en tarjetas de m√©tricas */
.metric-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 25px rgba(var(--primary-rgb), 0.15);
  transition: all 0.3s ease;
}

/* =========================
   RESPONSIVE
   ========================= */

@media (max-width: 768px) {
  .theme-grid {
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 0.75rem;
  }

  .theme-option-card {
    padding: 0.75rem;
  }

  .theme-color-preview {
    width: 32px;
    height: 32px;
  }

  .custom-color-input-group {
    flex-direction: column;
    align-items: stretch;
    gap: 0.5rem;
  }

  .theme-actions {
    flex-direction: column;
  }
}
